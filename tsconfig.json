{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./.out",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
} 