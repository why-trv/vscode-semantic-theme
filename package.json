{
  "name": "semantic-theme",
  "displayName": "Semantic Theme",
  "description": "An attempt at a decently semantic VSCode theme for C++",
  "version": "0.0.1",
  "publisher": "Yuri Turov",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Semantic Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/semantic-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "tsc && node .out/theme.js",
    "watch": "tsc-watch --onSuccess \"node .out/theme.js\"",
    "install": "rsync -av --exclude='.*' --exclude='node_modules' --exclude='.out' --exclude='*.vsix' . ~/.vscode/extensions/semantic-theme",
    "cursor-install": "rsync -av --exclude='.*' --exclude='node_modules' --exclude='.out' --exclude='*.vsix' . ~/.cursor/extensions/semantic-theme"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "typescript": "^4.5.0",
    "tsc-watch": "^4.6.0"
  }
}
